{
  "Serilog": {
    "Using": [ "Serilog.Sinks.ColoredConsole", "Serilog.Sinks.Debug", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "Override": {
      "System": "Information",
      "Microsoft": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "ColoredConsole"
      },
      {
        "Name": "Debug",
        "Args": {
          "restrictedToMinimumLevel":  "Warning"
        }
      }
    ]
  }
}
